<!DOCTYPE html>
<ht lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="bg-light text-primary text-large">
    <div class="container">
      <h1 class="text-center">QR CODE GENERATOR</h1>

      <form class="row mb-10" action="/generate" method="POST">
          <input type="text"
           name="content"
           id="content"
            class="form-control mt-4 col h-200 col"
            type="text"
            placeholder="Enter the text here"
          />
          <button
            class="btn btn-secondary text-center my-3"
            type="submit"
          >
            Submit
          </button>
      </form>


      <table class="table table-striped table-responsive">

        <thead>
          <th>Text</th>
          <th>QR Code</th>
          <th>Created at</th>
        </thead>
        <tbody>
      <% qrCodes.forEach(item => { %>

      <tr>
        <td class="fs-3"> <%= item.content %></td>
        <td> <img src="<%= item.qrCode %>" alt="img"></td>
        <td class="fs-6"> <%= item.createdAt %></td>

      </tr>

      <% }) %>
        </tbody>
      </table>

    </div>
  </body>
</ht